<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2016-01-30 23:33:23"
        android:id="@+id/list_timestamp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Water Level: 3.00"
        android:id="@+id/list_waterlevel"
        android:layout_below="@+id/list_ph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="pH: 7.00"
        android:id="@+id/list_ph"
        android:layout_below="@+id/list_timestamp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TDS: 300"
        android:id="@+id/list_tds"
        android:layout_alignTop="@+id/list_ph"
        android:layout_toRightOf="@+id/list_ph"
        android:layout_toEndOf="@+id/list_ph"
        android:layout_marginLeft="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lux: 80299"
        android:id="@+id/list_lux"
        android:layout_below="@+id/list_tds"
        android:layout_alignLeft="@+id/list_tds"
        android:layout_alignStart="@+id/list_tds" />
</RelativeLayout>